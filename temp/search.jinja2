<ol>
  {% for it in results %}
  <li>
    <div>
    {{it.number}}
    <a href="{{it.an}}">{{it.title}}</a>{%if it.author is defined%} <span>{{it.author}}</span>{% endif%}<br>
    <div>
    {{it.hl}}
    </div>
    </div>
  </li>
  <br>
  {% endfor %}
  <br>
  <br>
</ol>
